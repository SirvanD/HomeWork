<form action="/planets/<%= planet['id'] %>" method="post">

<input type="hidden" name="_method" value="put">
<label for="">Name</label>
<input type="text" name="name" value="<%= planet["name"] %>">
<label for="">Image URL</label>
<input type="text" name="image_url" value="<%= planet["image_url"] %>">
<label for="">Diameter</label>
<input type="text" name="diameter" value="<%= planet["diameter"] %>">
<label for="">Mass</label>
<input type="text" name="mass" value="<%= planet["mass"] %>">
<label for="">Moon Count</label>
<input type="text" name="moon_count" value="<%= planet["moon_count"] %>">

<button>Update</button>

</form>