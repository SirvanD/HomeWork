<h1>Update <%= planet["name"]%></h1>

<form action="/update_planet/<%= planet["id"] %>" method="post">
    <input type="hidden" name="_method" value="put">

    <div class="input">
        <label for="">Name:</label>
        <input type="text" name="name" value="<%= planet["name"] %>">
    </div>
    <div class="input">
        <label for="">Image URL:</label>
        <input type="text" name="image_url" value="<%= planet["image_url"] %>">
    </div>
    <div class="input">
        <label for="">Diameter (in km):</label>
        <input type="number" name="diameter" value="<%= planet["diameter"] %>">
    </div>
    <div class="input">
        <label for="">Mass (in kg):</label>
        <input type="number" name="mass" value="<%= planet["mass"] %>">
    </div>
    <div class="input">
        <label for="">Number of moons:</label>
        <input type="number" name="moon_count" value="<%= planet["moon_count"] %>">
    </div> 
    <button>Update planet</button>

</form>