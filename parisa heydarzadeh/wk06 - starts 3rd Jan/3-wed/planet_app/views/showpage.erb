<h1>Details of the Planet for <%= planet['name'] %></h1>

<h1>Name:<%= planet['name'] %></h1>
<img src="<%= planet['image_url'] %>" alt="">
<h3>Diameter: <%= planet['diameter'] %> </h3>
<h4>Mass: <%= planet['mass'] %> </h4>
<h5>Number of Moons: <%= planet['moon_count'] %> </h5>


<section class="function">
<form action="/delete_data/<%= planet['id']%>" method="post">
<input type="hidden" name="_method" value="delete">
<input type="hidden" name="planet_id" value="<%= planet['id']%>">
<button>Delete</button>

</form>

</section>


<a href="/planet/<%= planet['id']%>/edit">Edit</a>